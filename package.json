{
  "name": "hermione",
  "version": "3.3.1",
  "description": "Tests framework based on mocha and wdio",
  "main": "lib/hermione.js",
  "scripts": {
    "coverage": "nyc --reporter=text npm run test-unit",
    "lint": "eslint .",
    "test-unit": "_mocha -- test/",
    "test": "npm run test-unit && npm run lint",
    "toc": "doctoc README.md",
    "precommit": "npm run lint",
    "preversion": "npm run lint && npm test",
    "commitmsg": "conventional-changelog-lint -e",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/gemini-testing/hermione.git"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "keywords": [
    "hermione",
    "mocha",
    "test",
    "webdriverio"
  ],
  "bin": {
    "hermione": "./bin/hermione"
  },
  "license": "MIT",
  "dependencies": {
    "@gemini-testing/commander": "2.15.2",
    "@gemini-testing/webdriverio": "4.16.2",
    "bluebird": "^3.5.1",
    "bluebird-q": "^2.1.1",
    "chalk": "^1.1.1",
    "clear-require": "^1.0.1",
    "fs-extra": "^5.0.0",
    "gemini-configparser": "^1.0.0",
    "gemini-core": "github:gemini-testing/gemini-core#feature/pass-bro-version",
    "inherit": "^2.2.2",
    "lodash": "^4.17.4",
    "mocha": "~2.4.5",
    "plugins-loader": "^1.1.0",
    "q": "^2.0.0",
    "q-promise-utils": "^1.0.0",
    "teamcity-service-messages": "^0.1.6",
    "urijs": "^1.17.0",
    "worker-farm": "^1.7.0"
  },
  "devDependencies": {
    "app-module-path": "^2.2.0",
    "bluebird": "^3.5.1",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "conventional-changelog-lint": "^1.0.1",
    "doctoc": "^1.0.0",
    "escape-string-regexp": "1.0.5",
    "eslint": "^3.9.0",
    "eslint-config-gemini-testing": "^2.8.0",
    "husky": "^0.11.4",
    "nyc": "13.3.0",
    "proxyquire": "^1.7.3",
    "sinon": "^4.4.2",
    "sinon-chai": "^2.12.0",
    "standard-version": "^4.4.0"
  }
}
